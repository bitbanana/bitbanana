{
  "$schema": "https://deno.land/x/denon@2.5.0/schema.json",
  "scripts": {
    "main": {
      "cmd": "deno run main.ts",
      "desc": "run main.ts",
      "allow": [
        "env",
        "net",
        "read",
        "write"
      ],
      "unstable": true,
      "watch": false
    },
    "reset": {
      "cmd": "deno run initial_data/reset.ts",
      "desc": "reset all data",
      "allow": [
        "env",
        "net",
        "read",
        "write"
      ],
      "watch": false
    },
    "fullnode": {
      "cmd": "deno run full_node/server.ts",
      "desc": "run full node server",
      "allow": [
        "env",
        "net",
        "read",
        "write"
      ],
      "watch": false
    },
    "fruit": {
      "cmd": "deno run bit_fruit/server.ts",
      "desc": "run full node server",
      "allow": [
        "env",
        "net",
        "read",
        "write"
      ],
      "watch": false
    },
    "lint": {
      "cmd": "deno lint ./",
      "desc": "lint all ts, tsx files"
    },
    "fmt": {
      "cmd": "deno fmt ./",
      "desc": "format all ts, tsx files"
    }
  },
  "watcher": {
    "exts": [
      "ts",
      "tsx"
    ],
    "skip": [
      "*/.git/*"
    ]
  }
}
